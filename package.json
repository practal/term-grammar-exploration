{
  "name": "hybrid-module-template",
  "version": "0.0.2",
  "description": "Template for creating a hybrid ESM/CommonJS typescript module.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "grammar": "nearleyc src/term.ne -o src/term.cjs",
    "railroad": "nearley-railroad src/term.ne -o term.html",
    "parse": "nearley-test -i \"equals x y\" src/term.cjs",
    "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup",
    "test": "npm run grammar && npm run build && node dist/esm/package.test.js && node dist/cjs/package.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phlegmaticprogrammer/hybrid-module-template.git"
  },
  "author": "Steven Obua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phlegmaticprogrammer/hybrid-module-template/issues"
  },
  "homepage": "https://github.com/phlegmaticprogrammer/hybrid-module-template#readme",
  "devDependencies": {
    "@types/nearley": "^2.11.5",
    "@types/node": "^18.15.11",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "nearley": "^2.20.1",
    "things": "^4.7.1"
  }
}
